{
  "name": "angular-playground",
  "version": "1.1.1",
  "description": "A drop in app module for working on Angular components in isolation (aka Scenario Driven Development).",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "angular-playground": "dist/bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dist:clean": "rimraf ./dist",
    "build": "npm run dist:clean && npm run ngc:build && npm run cli:build",
    "ngc:build": "tsc -p ./tsconfig.json",
    "cli:build": "tsc -p ./src/cli/tsconfig.json",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SoCreate/angular-playground.git"
  },
  "keywords": [
    "angular"
  ],
  "author": {
    "name": "Justin Schwartzenberger",
    "url": "https://twitter.com/schwarty"
  },
  "contributors": [
    {
      "name": "Jami Lurock",
      "url": "https://twitter.com/maindg"
    },
    {
      "name": "Brian Treese",
      "url": "https://twitter.com/brianmtreese"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SoCreate/angular-playground/issues"
  },
  "homepage": "https://github.com/SoCreate/angular-playground#readme",
  "peerDependencies": {
    "@angular/common": "^2.4.1",
    "@angular/compiler": "^2.4.1",
    "@angular/core": "^2.4.1",
    "@angular/forms": "^2.4.1",
    "@angular/platform-browser": "^2.4.1",
    "@angular/platform-browser-dynamic": "^2.4.1",
    "rxjs": "^5.0.1",
    "zone.js": "^0.7.2"
  },
  "dependencies": {
    "node-watch": "^0.4.1"
  },
  "devDependencies": {
    "@angular/common": "2.4.1",
    "@angular/compiler": "2.4.1",
    "@angular/compiler-cli": "2.4.1",
    "@angular/core": "2.4.1",
    "@angular/forms": "2.4.1",
    "@angular/platform-browser": "2.4.1",
    "@angular/platform-browser-dynamic": "2.4.1",
    "@types/node": "6.0.42",
    "rimraf": "^2.5.4",
    "rxjs": "5.0.1",
    "tslint": "^4.0.2",
    "typescript": "~2.0.3",
    "zone.js": "0.7.2"
  }
}
