{
  "name": "angular-playground",
  "version": "5.4.2",
  "description": "A drop in app module for working on Angular components in isolation (aka Scenario Driven Development).",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "angular-playground": "dist/bin/index.js"
  },
  "files": [
    "dist",
    "schematics"
  ],
  "jest": {
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testURL": "http://localhost"
  },
  "scripts": {
    "ngc": "ngc",
    "build": "npm run app:build && npm run cli:build && npm run schematics:build",
    "app:build": "gulp build",
    "cli:build": "tsc -p ./cli/tsconfig.json",
    "schematics:build": "tsc -p ./schematics/tsconfig.json",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "tslint --project tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SoCreate/angular-playground.git"
  },
  "keywords": [
    "angular"
  ],
  "author": {
    "name": "SoCreate",
    "url": "https://SoCreate.it"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SoCreate/angular-playground/issues"
  },
  "homepage": "http://www.angularplayground.it",
  "schematics": "./schematics/src/collection.json",
  "peerDependencies": {
    "@angular/common": ">=7.0.0",
    "@angular/compiler": ">=7.0.0",
    "@angular/core": ">=7.0.0",
    "@angular/forms": ">=7.0.0",
    "@angular/platform-browser": ">=7.0.0",
    "@angular/platform-browser-dynamic": ">=7.0.0",
    "rxjs": ">=6.0.0",
    "zone.js": ">=0.8.28"
  },
  "dependencies": {
    "@angular-devkit/core": "^0.8.9",
    "@angular-devkit/schematics": "^0.8.9",
    "@schematics/angular": "^0.8.9",
    "async": "^3.0.1-0",
    "chalk": "^2.4.2",
    "commander": "^2.19.0",
    "get-port": "^4.2.0",
    "node-watch": "^0.6.0",
    "puppeteer": "^1.11.0"
  },
  "devDependencies": {
    "@angular/common": "^7.2.1",
    "@angular/compiler": "^7.2.1",
    "@angular/compiler-cli": "^7.2.1",
    "@angular/core": "^7.2.1",
    "@angular/forms": "^7.2.1",
    "@angular/platform-browser": "^7.2.1",
    "@angular/platform-browser-dynamic": "^7.2.1",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "@types/puppeteer": "^1.11.1",
    "codelyzer": "~4.5.0",
    "del": "^3.0.0",
    "glob": "^7.1.3",
    "gulp": "^4.0.0",
    "gulp-inline-ng2-template": "^5.0.1",
    "jest": "^23.6.0",
    "rxjs": "^6.3.3",
    "ts-jest": "^23.10.5",
    "tslint": "5.12.1",
    "typescript": "^3.2.4",
    "zone.js": "0.8.28"
  }
}
