{
  "name": "angular-playground",
  "version": "5.1.1",
  "description": "A drop in app module for working on Angular components in isolation (aka Scenario Driven Development).",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "angular-playground": "dist/bin/index.js"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testRegex": "/test/.*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ]
  },
  "scripts": {
    "ngc": "ngc",
    "build": "npm run app:build && npm run cli:build",
    "app:build": "gulp build",
    "cli:build": "tsc -p ./cli/tsconfig.json",
    "prepublishOnly": "npm run build",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SoCreate/angular-playground.git"
  },
  "keywords": [
    "angular"
  ],
  "author": {
    "name": "SoCreate",
    "url": "https://SoCreate.it"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SoCreate/angular-playground/issues"
  },
  "homepage": "http://www.angularplayground.it",
  "peerDependencies": {
    "@angular/common": ">=6.0.0",
    "@angular/compiler": ">=6.0.0",
    "@angular/core": ">=6.0.0",
    "@angular/forms": ">=6.0.0",
    "@angular/platform-browser": ">=6.0.0",
    "@angular/platform-browser-dynamic": ">=6.0.0",
    "rxjs": ">=6.0.0",
    "zone.js": ">=0.8.26"
  },
  "dependencies": {
    "async": "^2.6.0",
    "chalk": "^2.4.1",
    "commander": "^2.15.1",
    "node-watch": "^0.5.8",
    "puppeteer": "^1.4.0"
  },
  "devDependencies": {
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/forms": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@types/jest": "^22.2.3",
    "@types/node": "^9.3.0",
    "@types/puppeteer": "^1.3.2",
    "codelyzer": "~4.2.1",
    "del": "^3.0.0",
    "glob": "^7.1.2",
    "gulp": "^3.9.1",
    "gulp-inline-ng2-template": "^4.1.0",
    "jest": "^22.4.3",
    "rxjs": "^6.0.0",
    "ts-jest": "^22.4.4",
    "tslint": "5.9.1",
    "typescript": "^2.7.2",
    "zone.js": "0.8.26"
  }
}
